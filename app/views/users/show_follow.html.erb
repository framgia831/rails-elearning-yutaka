<div class= row>
	<div class= "col-md-4">
		<section class= "user_info">
			<%= render 'shared/user_info' %>
		</section>
		<section class= "stats">
			<%= render 'shared/stats' %>
		</section>
		<section>
			<% @users.each do |user| %>
			<% end %>
		</section>
	</div>
	<div class= "col-md-6">
		<h3><%= @title %> (<%= @users.count %>)</h3>
		
		<ul class= "users">
			<%= render @user.following %>
		</ul>
		
	</div>
</div>